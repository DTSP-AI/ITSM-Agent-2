# Impact Realty AI - Environment Configuration

# =============================================================================
# Backend Configuration
# =============================================================================

# FastAPI Settings
BACKEND_HOST=localhost
BACKEND_PORT=8000
API_VERSION=v1

# Environment
ENVIRONMENT=development

# =============================================================================
# Frontend Configuration  
# =============================================================================

# Next.js Settings
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL with pgvector
DATABASE_URL=postgresql://username:password@localhost:5432/impact_realty_ai
DB_HOST=localhost
DB_PORT=5432
DB_NAME=impact_realty_ai
DB_USER=username
DB_PASSWORD=password

# =============================================================================
# AI/LLM Configuration
# =============================================================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# External Integrations
# =============================================================================

# Zoho CRM
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token
ZOHO_DOMAIN=https://crm.zoho.com

# Zoho Mail
ZOHO_MAIL_CLIENT_ID=your_zoho_mail_client_id
ZOHO_MAIL_CLIENT_SECRET=your_zoho_mail_client_secret

# Zoho Calendar
ZOHO_CALENDAR_CLIENT_ID=your_zoho_calendar_client_id
ZOHO_CALENDAR_CLIENT_SECRET=your_zoho_calendar_client_secret

# Zoho Sign
ZOHO_SIGN_CLIENT_ID=your_zoho_sign_client_id
ZOHO_SIGN_CLIENT_SECRET=your_zoho_sign_client_secret

# BrokerSumo
BROKER_SUMO_API_KEY=your_broker_sumo_api_key
BROKER_SUMO_BASE_URL=https://api.brokersumo.com

# VAPI (Voice AI)
VAPI_API_KEY=your_vapi_api_key
VAPI_BASE_URL=https://api.vapi.ai

# =============================================================================
# Security & Authentication
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Logging & Monitoring
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# File Logging
LOG_FILE=logs/impact_realty_ai.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# Development Settings
# =============================================================================

# Debug Mode
DEBUG=true

# Hot Reload
RELOAD=true

# Development Database (SQLite for quick dev)
DEV_DATABASE_URL=sqlite:///./dev_impact_realty_ai.db 